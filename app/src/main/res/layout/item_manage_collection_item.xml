<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <EditText
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_sound_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:gravity="center_vertical"
        android:hint="Název hlášky"
        android:selectAllOnFocus="true"/>

    <Button
        android:id="@+id/play_sound_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/remove_item_button"
        android:text="Přehrát"/>

    <Button
        android:id="@+id/remove_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Smazat"/>
</RelativeLayout>